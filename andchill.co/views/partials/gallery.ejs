<div id="carousel-example-generic" class="carousel slide" >
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <%if (viewUser.pictures.length > 0){ %>
            <% for(var photoNum=1; photoNum< viewUser.pictures.length + 1; photoNum++) {%>
                <li data-target="#carousel-example-generic" data-slide-to="<%=photoNum%>"></li>
            <% } %>
        <% }%>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <% if (viewUser.profile.picture) { %>
            <div class="item active">
                <img src="<%= viewUser.profile.picture %>" width="400" height="400" alt="Profile Picture">
                <div class="carousel-caption">
                    <h3>Profile Picture</h3>
                </div>
            </div>

        <% } else { %>
            <div class="item active">
                <img src="<%= viewUser.gravatar() %>" width="400" height="400" alt="Profile Picture">
                <div class="carousel-caption">
                    <h3>Profile Picture</h3>
                </div>
            </div>

        <% } %>
        <%if ( viewUser.pictures.length > 0){ %>
            <% for(var photo=0; photo < viewUser.pictures.length; photo++) {%>
                <div class="item ">
                    <img src="<%= viewUser.pictures[photo] %>" alt="...">
                </div>
            <% } %>
        <%}%>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>